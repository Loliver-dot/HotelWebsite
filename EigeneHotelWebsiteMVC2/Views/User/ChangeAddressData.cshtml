@model AddressResponse
@{
    ViewData["Title"] = "ChangeAddressData";
}

<form method="post" asp-action="ChangeAddressDataResponse">
    <table>
        <thead>
            <tr>
                <th>Staat</th>    
                <th>Postleitzahl</th>    
                <th>Stadt</th>    
                <th>Straße</th>    
                <th>Hausnummer</th>    
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><input asp-for="State" value="@Model.State"/></td>
                <td><input asp-for="PostalCode" value="@Model.PostalCode" /></td>
                <td><input asp-for="City" value="@Model.City" /></td>
                <td><input asp-for="Street" value="@Model.Street" /></td>
                <td><input asp-for="StreetNumber" value="@Model.StreetNumber" /></td>
                <td><input class="invisible" asp-for="AddressId" value="@Model.AddressId" /></td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Adresse ändern" />
                </td>
            </tr>
        </tbody>
    </table>
</form>

