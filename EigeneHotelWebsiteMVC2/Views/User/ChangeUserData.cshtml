@model User
@{
    ViewData["Title"] = "ChangeUserData";
}

<form asp-action="ChangeUserDataResponse" method="post">
    <table>
        <thead>
            <tr>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Email-Adresse</th>
                <th>Telefonnummer</th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td><input asp-for="FirstName" value="@Model.FirstName" /></td>
                <td><input asp-for="LastName" value="@Model.LastName" /></td>
                <td><input asp-for="Email" value="@Model.Email" /></td>
                <td><input asp-for="PhoneNumber" value="@Model.PhoneNumber" /></td>
                <td><input class="invisible" asp-for="UserId" value="@Model.UserId" /></td>
                <td>
                    @if (Model.IsAdmin)
                    {
                        <input class="invisible" name="IsAdmin" type="checkbox" checked="checked" />
                    }
                    else
                    {
                        <input class="invisible" name="IsAdmin" type="checkbox" />
                    }
                </td>
            </tr>
            <tr>
                <td><input type="submit" value="Benutzerdaten ändern" /></td>
            </tr>
        </tbody>
    </table>
</form>